# Bazel configuration file
# Note: Use .bazelignore to exclude directories from analysis

# Common flags
build --color=yes
test --color=yes
test --test_output=errors

# Treat warnings as errors
# Temporarily disabled for Clang experiment
# build --copt=-Werror

# Arrow persistence feature (enabled by default)
build --define=enable_arrow=true

# Use Clang compiler
build --action_env=CC=clang
build --action_env=CXX=clang++

# Allow Clang vectorization warnings (not actual errors)
build --copt=-Wno-error=pass-failed
