# Bazel configuration file
# Note: Use .bazelignore to exclude directories from analysis

# Common flags
build --color=yes
test --color=yes
test --test_output=errors

# Arrow persistence feature (optional, requires Conan build)
# To enable: bazel build --config=arrow //...
build:arrow --define=enable_arrow=true

# CI configuration (disables Arrow to avoid long build times)
build:ci --define=enable_arrow=false
